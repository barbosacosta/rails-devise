<%= simple_form_for(@tema) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome_tema %>
    
    <%= f.label :assunto_id %>
    <%= f.collection_select(:assunto_id, Assunto.all, :id, :nome_assunto, prompt: true) %>
        
   
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
